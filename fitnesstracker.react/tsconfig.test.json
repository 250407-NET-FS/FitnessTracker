{
    "extends": "./tsconfig.app.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "jest",
            "@testing-library/jest-dom",
            "node"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "**/__tests__/**/*.ts",
        "**/__tests__/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}